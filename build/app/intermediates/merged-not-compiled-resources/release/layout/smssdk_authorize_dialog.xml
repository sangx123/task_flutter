<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@drawable/smssdk_authorize_dialog_bg">
	<TextView
		android:id="@+id/smssdk_authorize_dialog_title_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="15dp"
		android:textStyle="bold"
		android:textSize="@dimen/smssdk_authorize_text_size_l"
		android:textColor="@color/smssdk_common_black"
		android:text="@string/smssdk_authorize_dialog_title"/>
	<cn.smssdk.ui.companent.CircleImageView
		android:id="@+id/smssdk_authorize_dialog_logo_iv"
		android:layout_width="45dp"
		android:layout_height="45dp"
		android:layout_marginTop="15dp"
		android:scaleType="centerInside"
		android:layout_gravity="center_horizontal"
		android:contentDescription="logo"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="15dp"
		android:background="#F5F5F5"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:orientation="vertical">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/smssdk_authorize_text_size_m"
			android:textColor="@color/smssdk_common_black"
			android:text="@string/smssdk_authorize_dialog_ask"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="center_vertical">
			<View
				android:layout_width="3dp"
				android:layout_height="3dp"
				android:layout_marginRight="5dp"
				android:background="@drawable/smssdk_authorize_dot"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/smssdk_authorize_text_size_s"
				android:textColor="@color/smssdk_common_text_gray"
				android:text="@string/smssdk_authorize_dialog_permission"/>
		</LinearLayout>
		<TextView
			android:id="@+id/smssdk_authorize_dialog_usage_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:textSize="@dimen/smssdk_authorize_text_size_s"
			android:textColor="@color/smssdk_common_text_gray"
			android:text="@string/smssdk_authorize_dialog_usage"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="center_vertical">
			<CheckBox
				android:id="@+id/smssdk_authorize_dialog_do_not_ask_cb"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:button="@drawable/smssdk_authorize_dialog_checkbox_bg_selector"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="16dp"
				android:textColor="@color/smssdk_common_black"
				android:text="@string/smssdk_authorize_dialog_do_not_ask_again"/>
		</LinearLayout>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#F5F5F5"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:gravity="center_vertical">
		<TextView
			android:id="@+id/smssdk_authorize_dialog_reject_tv"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:background="@drawable/smssdk_authorize_bottom_left_round_btn"
			android:textSize="18dp"
			android:textColor="@color/smssdk_common_black"
			android:text="@string/smssdk_authorize_dialog_reject"/>
		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="@color/smssdk_common_line_gray"/>
		<TextView
			android:id="@+id/smssdk_authorize_dialog_accept_tv"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:background="@drawable/smssdk_authorize_bottom_right_round_btn"
			android:textSize="18dp"
			android:textColor="@color/smssdk_common_white"
			android:text="@string/smssdk_authorize_dialog_accept"/>
	</LinearLayout>
</LinearLayout>
